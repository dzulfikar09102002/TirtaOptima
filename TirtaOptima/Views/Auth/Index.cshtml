@model TirtaOptima.ViewModels.AuthViewModel;
@{
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
    Model.ReturnUrl = Context.Request.Query["ReturnUrl"];
}
<link href="~/assets/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/assets/css/icons.min.css" rel="stylesheet" />
<link href="~/assets/css/app.min.css" rel="stylesheet" />
<link href="~/assets/css/custom.min.css" rel="stylesheet" />

<form class="w-100 mt-3" asp-action="Index" method="post">
    <input type="hidden" asp-for="ReturnUrl">
    <div class="text-center">
        <h3 class=" fw-bold">Selamat Datang!</h3>
        <p class="text-muted ">
            Silahkan masukkan Username dan Kata Sandi Anda
        </p>
    </div>
    @if (!string.IsNullOrEmpty(TempData["ErrorMessages"]?.ToString()))
    {
        <div class="alert alert-danger alert-dismissible alert-label-icon rounded-label fade show" role="alert">
            <i class="ri-error-warning-line label-icon"></i>@TempData["ErrorMessages"]?.ToString()
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    <div class="mb-3">
        <label asp-for="Username" class="form-label">Username</label>
        <input type="text" class="form-control" asp-for="Username" placeholder="Masukkan Username" required>
        <small><span class="text-danger" asp-validation-for="Username"></span></small>
    </div>
    <div class="mb-4">
        <label asp-for="Password" class="form-label">Kata Sandi</label>
        <div class="input-group">
            <input type="password" class="form-control" asp-for="Password" placeholder="Masukkan Kata Sandi"
                   required>
            <button type="button" class="btn btn-primary" onclick="showPassword()" style="
            display: flex;
            align-items: center;
            justify-content: center;" id="show-password" title="Show Password">
                <i class="bi bi-eye px-2"></i>
            </button>
        </div>
        <small><span class="text-danger" asp-validation-for="Password"></span></small>
    </div>

    <div class="d-grid gap-2 mb-3">
        <button type="submit" class="btn btn-primary btn-lg">Masuk</button>
    </div>
</form>


<!-- JavaScript -->
@{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>

    <script>
        function showPassword() {
            const password = document.getElementById('Password');
            const showPassword = document.getElementById('show-password');
            if (password.type === 'password') {
                password.type = 'text';
                showPassword.innerHTML = '<i class="px-2 bi bi-eye-slash"></i>';
                showPassword.title = 'Sembunyikan Kata Sandi';
            } else {
                password.type = 'password';
                showPassword.innerHTML = '<i class="px-2 bi bi-eye"></i>';
                showPassword.title = 'Tampilkan Kata Sandi';
            }
        }

        $('.form-select').select2({
            theme: 'bootstrap-5',
            width: '100%',
            dropdownAutoWidth: true
        });
    </script>
}


