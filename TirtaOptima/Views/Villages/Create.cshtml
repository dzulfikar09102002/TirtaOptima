@model TirtaOptima.ViewModels.VillagesViewModel
<div class="row">
    <div class="col-12 mb-3">
        <form id="frmAdd" class="needs-validation" novalidate asp-controller="Villages" asp-action="Add" method="POST" enctype="multipart/form-data">
            <div class="row">
                <div class="col-12 mb-3">
                    @Html.AntiForgeryToken()
                    <label asp-for="Nama" class="form-label required-star">Nama Kelurahan</label>
                    @Html.TextBoxFor(x => x.Nama, new { @class = "form-control" })
                </div>
                <div class="col-12 mb-3">
                    <label asp-for="KodeKec" class="form-label required-star">Kecamatan</label>
                    @Html.DropDownListFor(x => x.KodeKec,
                             new SelectList(Model.Districts, "Id", "Nama"),
                             "-- Pilih Kecamatan --",
                             new { @class = "form-select", @data_choices = true })
                    <div class="col-12 mb-3">
                        <label asp-for="Layanan" class="form-label required-star">Kualitas Layanan</label>
                        <input asp-for="Layanan" type="range" class="form-range" min="1" max="5" id="customRange2">
                        <div class="d-flex justify-content-between px-2 fw-bold text-primary">
                            <span>1</span>
                            <span>2</span>
                            <span>3</span>
                            <span>4</span>
                            <span>5</span>
                        </div>
                    </div>
                    <div class="col-12 mb-3">
                        <label asp-for="Jarak" class="form-label required-star">Jarak (Km)</label>
                        @Html.TextBoxFor(x => x.Jarak, new { @class = "form-control" })
                    </div>
                    <div class="col-12">
                        <label asp-for="Keterangan" class="form-label required-star">Keterangan</label>
                        @Html.TextAreaFor(x => x.Keterangan, new { @class = "form-control" })
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div class="hstack gap-2 justify-content-end">
        <button type="button" class="btn btn-danger" id="btn-tutup-event" data-bs-dismiss="modal">Tutup</button>
        <button type="button" class="btn btn-success" id="btn-save-event" onclick="Add()">Simpan</button>
    </div>
</div>
<script src="~/assets/js/pluginaddon.js"></script>
<script>
    function Add() {
        var formData = new FormData($("#frmAdd")[0]);
        var t = $("input[name='__RequestVerificationToken']").val();

        $.ajax({
            url: $("#frmAdd").attr('action'),
            type: "POST",
            data: formData,
            dataType: "json",
            contentType: false,
            processData: false,
            headers:
            {
                "RequestVerificationToken": t
            },
            beforeSend: function () {
                $("#loader").show()
            },
            complete: function () { $("#loader").hide(); },
            success: function (resp) {
                if (resp.status == 1) {
                    Swal.fire({
                        icon: 'success',
                        title: '<b>Info</b>',
                        text: resp.message,
                        timer: 1000,
                        showConfirmButton: false,
                    }).then(() => {
                        window.location.reload();
                    })
                }
                else {
                    Swal.fire({
                        icon: 'warning',
                        title: '<b style="color:orange">Peringatan</b>',
                        text: resp.message,
                    })
                }
            }
        })

    }
</script>